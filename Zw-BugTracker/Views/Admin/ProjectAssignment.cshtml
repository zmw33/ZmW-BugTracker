
@{
    ViewBag.Title = "ProjectAssignment";
}

<body>
    <div id="page-wrapper">
        <div class="container">
            <br />
            <div class="row">
                <div class="col-lg-12 text-center">
                    <h2>Project Assignment</h2>
                </div>
            </div>

            <div class="row">
                <div class="col-lg-6 text-center project">
                    @Html.Label("Select Project")
                </div>
                <div class="col-lg-6 text-center user">
                    @Html.Label("Select User(s)")
                </div>
            </div>

            @using (Html.BeginForm("ProjectAssignment", "Admin", FormMethod.Post, new { enctype = "Multipart/form-data" }))
            {
            @Html.AntiForgeryToken()
            <div class="row">
                <div class="col-lg-6 projects">
                    @Html.ListBox("Projects", null, htmlAttributes: new { @class = "form-control" })
                </div>
                <div class="col-lg-6 users">
                    @Html.ListBox("Users", null, htmlAttributes: new { @class = "form-control" })
                </div>
            </div>
            <div class="row">
                <div class="col-lg-12 text-center" style="padding-top:5px">
                    <button class="btn btn-primary" type="submit">Save</button>
                </div>
            </div>
            }
        </div>
    </div>
</body>

<style>
    .users 
    {
        max-height: 150px;
        padding-right: 200px;
    }

    .projects 
    {
        padding-left: 200px;
    }

    .user
    {
        padding-right: 100px;
    }

    .project
    {
        padding-left: 100px;
    }
</style>
